<div class="container">
  <div class="devise-user-edit">
    <h3>アカウント情報編集</h3>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="devise-input">
        <div class="field">
          <%= f.label :email, "メールアドレス" %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>

      <div class="devise-input">
        <div class="field">
          <%= f.label :password, "新しいパスワード" %> <br /><i>(変更しない場合は空欄のまま更新して下さい。)</i><br />
          <%= f.password_field :password, autocomplete: "new-password" %>
          <% if @minimum_password_length %>
            <br />
            <em><%= @minimum_password_length %>文字以上</em>
          <% end %>
        </div>
      </div>

      <div class="devise-input">
        <div class="field">
          <%= f.label :password_confirmation, "パスワード確認用" %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
        </div>
      </div>

      <div class="devise-input">
        <div class="field">
          <%= f.label :current_password, "現在のパスワード" %> <br /><i>(確認用に現在のパスワードを入力して下さい。)</i><br />
          <%= f.password_field :current_password, autocomplete: "current-password" %>
        </div>
      </div>

      <div class="devise-button">
        <div class="actions">
          <%= f.submit "更新" %>
        </div>
      </div>
    <% end %>

    <h3>退会</h3>

    <p><%= button_to "退会する", registration_path(resource_name), data: { confirm: "本当に退会しますか？" }, method: :delete %></p>

    <%= link_to "戻る", :back %>
  </div>
</div>

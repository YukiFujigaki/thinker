<div class="container">
  <div class="role_models-index-header">
    ロールモデルの編集
  </div>
  <%= form_for @role_model, url: { controller: 'role_models', action: 'update', id: @role_model.id } do |form| %>
    <div class="role_models-input-field">
      <%= form.label :title, 'タイトル' %>
      <%= form.text_field :title, value: @role_model.title %>
    </div>
    <div class="role_models-input-field">
      <%= form.label :description, '説明' %>
      <%= form.text_area :description, value: @role_model.description %>
    </div>
    <div class="role_models-input-field">
      <%= form.label :good_point, 'このロールモデルの良い点' %>
      <%= form.text_area :good_point, value: @role_model.good_point %>
    </div>
    <div class="role_models-input-field">
      <%= form.label :bad_point, 'このロールモデルの悪い点' %>
      <%= form.text_area :bad_point, value: @role_model.bad_point %>
    </div>
    <div class="role_models-input-field">
      <%= form.label :approach, 'このロールモデルを実践するには' %>
      <%= form.text_area :approach, value: @role_model.approach %>
    </div>
    <%= form.submit '投稿' %>
  <% end %>
</div>
